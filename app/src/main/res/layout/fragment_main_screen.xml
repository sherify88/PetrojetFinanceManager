<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kesho.petrojetfinancemanager.MainScreenFragment"
    android:background="#f5f5dc">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="عرض طلبات الشيكات"
        android:id="@+id/viewOrdersId"/>
 <Button
     android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="متابعة تواريخ استلام الشيكات"
        android:id="@+id/viewDatesList"/>
<Button
     android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="عرض و تعديد ما تم تحديده من مواعيد مصنف باسم المورد"
        android:id="@+id/btnShowTotalSent"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="استعراض تحت المراجعة"
            android:id="@+id/viewUnderReview"/>
 <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="استعراض شيكات بالخزينة"
            android:id="@+id/viewTreasuryChecks"/>
<Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="احصائيات"
            android:id="@+id/statistics"/>


<Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="استعجالات الورش"
            android:id="@+id/ManagerOrdersBtn"/>


    </LinearLayout>

</FrameLayout>
