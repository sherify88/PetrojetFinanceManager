<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kesho.petrojetfinancemanager.NamesListBegFragment"
    android:background="#f5f5dc">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalOpenItemsCounter"
        android:text="اجمالي الطلبات المفتوحة هو   :  0"
        android:textSize="20dp"
        android:textStyle="bold"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTotalSearchByVendorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_gravity="left"
            android:text="بحث" />

        <EditText
            android:id="@+id/totalSearchEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:hint="ادخل اسم المورد / المقاول"
           />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/names_list_id"
        >
    </ListView>
</LinearLayout>
</FrameLayout>
